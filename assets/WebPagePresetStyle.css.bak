/* All the page colours can be edited here.

   -The cookie pupop colours can be edited in the original .html file 
   on the function: 'changeCookies'.

   -The size of the navbar when scrolling down 
   can be changed on the function: 'addSmall'.
*/

body {
  margin: 0;
  font-size: 25px;
  color: rgb(3,3,3);
  background-color: #f6f6f6; /* page color (light mode) */
  font-family: Arial, Helvetica, sans-serif;
}
.dark-mode{ /* page color (dark mode) */
  background-color: rgb(24,24,24);
}

.btn { /* button color (light mode) */
  border: none; border-width:1px; /* change 'none' to 'solid' to add border */
  padding: 14px 28px;
  cursor: pointer; 
  background-color: rgb(255,255,255); color: rgb(3,3,3);}
  .btn:hover {background: rgb(242,242,242); /* button color on hover (light mode) */
}
.toDark {border: none; border-width:1px;} /* change 'none' to 'solid' to add border*/
.toDark {background-color: rgb(33,33,33); color: rgb(255,255,255);} /* button color (dark mode) */
.toDark:hover {background-color: rgb(56,56,56);} /* button color on hover (dark mode) */

.mainTextLight { /* text style of text with 'mainTextLight' class (light mode) */
  color: rgb(3,3,3);
  font-size: 1.5em; /* similar to <h2> */
  font-weight: bolder; /* similar to <h2> */
}
.mainTextDark { /* text style of text with 'mainTextDark' class (dark mode) */
  color: rgb(255,255,255);
  font-size: 1.5em;  /* similar to <h2> */
  font-weight: bolder; /* similar to <h2> */
}

.secondaryTextLight { /* text style of text with 'secondaryTextDark' class (light mode) */
  color: #000000;
  font-size: 1.0em; /* similar to <p> */
}
.secondaryTextDark { /* text style of text with 'secondaryTextDark' class (dark mode) */
  color: #f6f6f6;
  font-size: 1.0em; /* similar to <p> */
}

.content {
  padding: 16px;
}
.sticky { /* desktop */
  position: sticky; /* sticky on desktop */
  top: 0;
  width: 100%;
  opacity: 0.98; /* the opacity of the navbar when scrolling down */
}
.sticky + .content {
  padding-top: 60px;
}

.unselectable { /* class to make text unselectable */
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

.headerL { /* header style (light mode) */
  height: auto; 
  background-color: #EB4034;
  position: static;
  top: 0;
  width: auto;
  min-width: 1040px;
}
.headerTextL { /* header text style (light mode) */
  color: white; 
  padding: 24px; 
  margin: 0; 
  text-align: center;
}

.headerD { /* header style (dark mode) */
  height: auto; 
  background-color: #EB4034;
  position: static;
  top: 0;
  width: auto;
  min-width: 1040px;
}
.headerTextD { /* header text style (dark mode) */
  color: white; 
  padding: 24px; 
  margin: 0; 
  text-align: center;
}

.footerL { /* footer style (light mode) */
  height: auto; 
  background-color: #EB4034;
  position: static;
  bottom: 0;
  width: auto;
  min-width: 1040px;
}
.footerTextL { /* footer text style (light mode) */
  color: white; 
  padding: 20px; 
  margin: 0; 
  text-align: center;
}

.footerD { /* footer style (dark mode) */
  height: auto; 
  background-color: #EB4034;
  position: static;
  bottom: 0;
  width: auto;
  min-width: 1040px;
}
.footerTextD { /* footer text style (dark mode) */
  color: white; 
  padding: 20px; 
  margin: 0; 
  text-align: center;
}

section {
  display: -webkit-flex;
  display: flex;
  width: 1040px;
  max-width: 1040px;
  min-width: 1040px;
  margin-left: 22.68%;
  margin-right: 22.68%;
}

.article {
  -webkit-flex: 3;
  -ms-flex: 3;
  flex: 3;
  padding: 10px;
  position: relative;
  background-color: #ffffff;
  text-align: left;
  padding-left: 12px;
  padding-right: 12px;
}
.articleDark{
  background-color: #575757;
}

.empty {
  font-size: 10px;
}

.navBarMargin{
  margin-left: 22.68%;
}

.navBarL{
  list-style-type:  none;
  margin: 0;
  padding: 0;
  /*overflow: hidden;*/
  width: auto;
  min-width: 1040px;
  z-index: 2;
  background-color: rgb(255,255,255);
}
.navBarL a{
  display: inline-block;
  color: rgb(3,3,3);
  padding: 14px 16px; /* navbar size (light mode) */
  text-decoration: none;
}
.navBarL a:hover{
  background-color: rgb(242,242,242);
  color: rgb(3,3,3);
}
.navBarL a.active {
  background-color: rgb(229,229,229);
  color: rgb(3,3,3);
}
.navBarL a.active:hover {
  background-color: rgb(217,217,217);
  color: rgb(3,3,3);
}
.dropdown {
  display: inline-block;
  position: relative;
}
.dropdown-content {
  display: none;
  position: absolute;
  background-color: rgb(255, 255, 255);
  width: 160px;
  box-shadow: 5px 10px 10px rgba(0,0,0,0.3);
  z-index: 1;
}
.dropdown-content a {
  color: black;
  padding: 12px 16px;
  text-decoration: none;
  display: block;
  text-align: left;
  width: 128px;
  z-index: 1;
}
.dropdown-content a:hover {
  background-color: rgb(229,229,229);
}
.dropdown:hover .dropdown-content {
  display: none;
}
.dropdownShow:hover .dropdown-content {
  display: block;
}

.navBarD{
  list-style-type:  none;
  margin: 0;
  padding: 0;
  /*overflow: hidden;*/
  width: auto;
  min-width: 1040px;
  z-index: 2;
  background-color: rgb(32,32,32);
}
.navBarD a {
  display: inline-block;
  color: rgb(255,255,255);
  padding: 14px 16px; /* navbar size (light mode) */
  text-decoration: none;
}
.navBarD a:hover {
  background-color: rgb(56,56,56);
  color: white;
}
.navBarD a.active {
  background-color: rgb(56,56,56);
  color: white;
}
.navBarD a.active:hover {
  background-color: rgb(76,76,76);
  color: white;
}
.dropdown-contentDark {
  display: none;
  position: absolute;
  background-color: rgb(32,32,32);
  color: rgb(255, 255, 255);
  width: 160px;
  box-shadow: 5px 10px 10px rgba(0,0,0,0.3);
  z-index: 1;
}
.dropdown-contentDark a {
  color: rgb(255, 255, 255);
  padding: 12px 16px;
  text-decoration: none;
  display: block;
  text-align: left;
  width: 128px;
  z-index: 1;
}
.dropdown-contentDark a:hover {
  background-color: rgb(56,56,56);
}

.show {
  display: block;
}

@media only screen and (max-width: 1023px){ /* mobile devices/tablets */
.sticky {
  position: fixed; /* fixed on mobile devices */
  top: 0;
  width: 100%;
  opacity: 0.98; /* the opacity of the navbar when scrolling down */
}
}
@media only screen and (max-width: 1919px){ /* not fullscreen */
section {
  display: -webkit-flex;
  display: flex;
  width: 1040px;
  max-width: 1040px;
  min-width: 1040px;
  margin-left: auto;
  margin-right: auto;
}
.navBarMargin {
  margin-left: auto;
}
}